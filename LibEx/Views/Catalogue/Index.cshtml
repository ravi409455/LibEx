@model LibEx.ViewModels.Catalogue.AssetIndexModel


<div id="assets">
    <h3>@ViewBag.Title</h3>
    <div id="assetsTable">
        <table class="table table-condensed" id="catalogueIndexTable">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author or Director</th>
                    <th>Dewey Call Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asset in Model.Assets)
                {
                <tr class="assetRow">
                    <a asp-controller="Catalogue" asp-action="Detail" asp-route-id="@asset.Id">
                        <td class=""><img src="@asset.ImageUrl" class="imageCell" /></td>
                    </a>
                    <td class="assetTitle">@asset.Title</td>
                    <td class="assetAuthorOrDirector">@asset.AuthorOrDirector</td>
                    <td class="assetDeweyIndex">@asset.DeweyCallNumber</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>